html
    head
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        title Productos con PUG
        meta(name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover")
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous")

    body
        div(class="container mt-3")
            div(class="jumbotron")
                h1(style="color: blue")= titulo
                br

                form(action="/productos" method="post")
                    div(class="form-group")
                        label(for="nombre")
                        b Nombre
                        input(id="nombre" class="form-control" type="text" name="nombre" required)

                    div(class="form-group")
                        label(for="precio")
                        b Precio
                        input(id="precio" class="form-control" type="number" name="precio" required)

                    div(class="form-group")
                        label(for="foto_URL")
                        b Foto URL
                        input(id="foto_URL" class="form-control" type="url" name="foto_URL" required)

                    button(class="btn btn-success mt-3 mb-5") Enviar
                button(class="btn btn-success mt-3" type="button" onclick="location.href='" + button_dir +"'")= button_text