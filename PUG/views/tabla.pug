html 
    head
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        title Productos con PUG
        meta(name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover")
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous")
    body
        div(class="container mt-3")
            div(class="jumbotron")
                h1(style="color: blue")= titulo
                br
                if products_list.length != 0
                    div(class="table-responsive")
                        table(class="table table-dark")
                            tr(style="color: yellow;")
                                th= "Nombre"
                                th= "Precio"
                                th= "Imagen"
                            each val in products_list
                                tr
                                    td= val.nombre
                                    td= val.precio
                                    td
                                        img(src= val.foto_URL alt=val.nombre width="60" height="60") 
                else
                    h3(style="color: black") No hay productos
                button(class="btn btn-success" type="button" onclick="location.href='" + button_dir +"'")= button_text